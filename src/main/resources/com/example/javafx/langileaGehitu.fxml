<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.Image?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javafx.LangileaGehituController" style="-fx-background-color: #345A7B;">
    <children>
        <!-- Header -->
        <ImageView onMouseClicked="#onAtzeaBotoiaClick" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
            <image>
                <Image url="@../../../images/atzea.png" />
            </image>
        </ImageView>

        <!-- Usuario Label ajustado -->
        <Label fx:id="erabiltzailea" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Erabiltzailea" textFill="#CFD0CE" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" />

        <!-- Formulario -->
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="150.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Izena -->
                <Label text="Izena:" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                <TextField fx:id="izenaField" promptText="Sartu izena" GridPane.columnIndex="1" style="-fx-font-size: 12px;"/>

                <!-- Email -->
                <Label text="Email:" style="-fx-font-size: 14px; -fx-text-fill: white;" GridPane.rowIndex="1"/>
                <TextField fx:id="emailField" promptText="Sartu email-a" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 12px;"/>

                <!-- Lan Postua -->
                <Label text="Lan Postua:" style="-fx-font-size: 14px; -fx-text-fill: white;" GridPane.rowIndex="2"/>
                <ComboBox fx:id="lanPostuaComboBox" promptText="Hautatu lan postua" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 12px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Gerentea" />
                            <String fx:value="Sukaldaria" />
                            <String fx:value="Zerbitzaria" />
                            <String fx:value="Administratzailea" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Pasahitza -->
                <Label text="Pasahitza:" style="-fx-font-size: 14px; -fx-text-fill: white;" GridPane.rowIndex="3"/>
                <PasswordField fx:id="pasahitzaField" promptText="Sartu pasahitza" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-size: 12px;"/>

                <!-- Txat Baimena -->
                <Label text="Txat-eko baimena:" style="-fx-font-size: 14px; -fx-text-fill: white;" GridPane.rowIndex="4"/>
                <ComboBox fx:id="txatBaimenaComboBox" promptText="Hautatu baimena" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 12px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Bai" />
                            <String fx:value="Ez" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </GridPane>

            <!-- BotÃ³n Guardar -->
            <Button text="Gehitu" onAction="#onGehituBotoiaClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" maxWidth="120"/>
        </VBox>
    </children>
</AnchorPane>
